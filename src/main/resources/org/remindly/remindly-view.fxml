<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextArea?>

<?import javafx.scene.layout.Region?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.remindly.controller.TaskController"
            prefWidth="400" prefHeight="400">

    <VBox spacing="15" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>



        <!--HEADER-->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Tasks List" fx:id="labelHeader"/>


            <Region HBox.hgrow="ALWAYS"/> <!-- Empuja el botÃ³n a la derecha -->
            <Button text="Add task" fx:id="btnShowForm" onAction="#toggleTaskForm" />        <!-- The button shows the form-->

        </HBox>


        <!-- Formulario oculto inicialmente -->
        <VBox fx:id="Form" spacing="10" visible="false" managed="false" styleClass="form-container">

            <Label text="New Task"/>

            <TextField fx:id="taskNameInput" promptText="Name of the task *"/>

            <TextArea fx:id="taskDescriptionInput" promptText="Description (optional)" prefRowCount="3"/>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="due date of the task"/>
                <DatePicker fx:id="dueDatePicker"/>

            </HBox>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Cancel" onAction="#cancelAddTask"/>
                <Button text="Save" onAction="#OnSaveClick"/>
            </HBox>
        </VBox>




            <ListView fx:id="taskListView" ></ListView>






    </VBox>

</AnchorPane>


